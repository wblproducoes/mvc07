{% extends 'layouts/base.twig' %}

{% block title %}Dashboard - {{ app_name }}{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col">
        <h1 class="display-5">
            <i class="bi bi-speedometer2"></i> Bem-vindo, {{ user|default('Usuário') }}!
        </h1>
        <p class="lead text-muted">Painel de controle do sistema</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3">
                    <i class="bi bi-people display-1 text-primary"></i>
                </div>
                <h3 class="card-title">Usuários</h3>
                <p class="display-4 text-primary fw-bold">0</p>
                <p class="text-muted">Total de usuários cadastrados</p>
                <a href="{{ route('users') }}" class="btn btn-outline-primary">
                    <i class="bi bi-eye"></i> Ver todos
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3">
                    <i class="bi bi-file-earmark-text display-1 text-success"></i>
                </div>
                <h3 class="card-title">Relatórios</h3>
                <p class="display-4 text-success fw-bold">0</p>
                <p class="text-muted">Relatórios gerados</p>
                <a href="{{ route('reports') }}" class="btn btn-outline-success">
                    <i class="bi bi-eye"></i> Ver todos
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3">
                    <i class="bi bi-gear display-1 text-warning"></i>
                </div>
                <h3 class="card-title">Configurações</h3>
                <p class="display-4 text-warning fw-bold">-</p>
                <p class="text-muted">Configurações do sistema</p>
                <a href="{{ route('settings') }}" class="btn btn-outline-warning">
                    <i class="bi bi-gear"></i> Acessar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-activity"></i> Atividades Recentes</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Nenhuma atividade recente
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-bell"></i> Notificações</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-secondary">
                    <i class="bi bi-bell-slash"></i> Sem notificações
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
